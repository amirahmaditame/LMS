@model DateLayer.ChangePasswordViewModel

@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<section class="gray pt-0">
    <div class="container-fluid">

        <!-- Row -->
        <div class="row">

            <div class="col-lg-9 col-md-9 col-sm-12">

                <!-- Row -->
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12 pt-4 pb-4">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/userpanel/dashboard">خانه</a></li>
                                <li class="breadcrumb-item active" aria-current="page">تنظیمات حساب کاربری</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <!-- /Row -->
                <!-- Row -->
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="dashboard_container">
                            <div class="dashboard_container_header">
                                <div class="dashboard_fl_1">
                                    <h4 class="text-right">حساب کاربری</h4>
                                </div>
                            </div>
                            <div class="dashboard_container_body p-4">
                                <!-- Basic info -->
                                @using (Html.BeginForm())
                                {
                                    <div class="submit-section">
                                        <div class="form-row">

                                            @Html.AntiForgeryToken()
                                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                            <div class="form-group col-md-6">
                                                <label>
                                                    @Html.LabelFor(model => model.Password)
                                                </label>
                                                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group col-md-6">
                                                <label>
                                                    @Html.LabelFor(model => model.RePassword)
                                                </label>
                                                @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                                            </div>
                                            <div class="form-group col-md-12">
                                                <label>
                                                    @Html.LabelFor(model => model.OldPassword)
                                                </label>
                                                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                                                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                                            </div>

                                            <div class="form-group col-lg-12 col-md-12">
                                                <button class="btn btn-theme" type="submit">تغییر رمز عبور</button>
                                            </div>

                                        </div>
                                    </div>
                                }
                                <!-- Basic info -->


                            </div>

                        </div>
                    </div>
                </div>
                <!-- /Row -->

            </div>
            <div class="col-lg-3 col-md-3 p-0 ">
                <div class="dashboard-navbar " style="text-align: right;">

                    <div class="d-user-avater">
                        <img src="/content/assets/img/user-3.jpg" class="img-fluid avater" alt="">
                        <h4>Adam Harshvardhan</h4>
                        <span>Canada USA</span>
                    </div>

                    <div class="d-navigation">
                        <ul id="side-menu">
                            <li><a href="/UserPanel"><i class="ti-user"></i>داشبورد</a></li>
                            <li><a href="/UserPanel/Dashboard/AccountSetting"><i class="ti-heart"></i>ویرایش حساب کاربری</a></li>
                            <li class="active"><a href="/UserPanel/Dashboard/ChangePassword"><i class="ti-heart"></i>تغییر رمز</a></li>


                            <li><a href="my-order.html"><i class="ti-shopping-cart"></i>کیف پول</a></li>
                            <li><a href="settings.html"><i class="ti-settings"></i>فاکتور ها </a></li>
                            <li><a href="/Logout"><i class="ti-power-off"></i>خروج</a></li>
                        </ul>
                    </div>

                </div>


            </div>

        </div>
        <!-- Row -->

    </div>
</section>


@section Scripts
 {
    @if (ViewBag.SuccessPass != null)
    {
        <script>
            Command: toastr["success"]("پسورد با موفقیت تغییر کرد");
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };
        </script>
    }

}
