@model DateLayer.RecoveyPasswordViewModel

@{
    ViewBag.Title = "RecoveryPassword";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>RecoveryPassword</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <section class="page-title">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">

                    <div class="breadcrumbs-wrap">
                        <h1 class="breadcrumb-title">Recovery Password</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Recovery Password</li>
                            </ol>
                        </nav>
                    </div>

                </div>
            </div>
        </div>
    </section>
    <section class="pt-0">
        <div class="container">

            <div class="col-lg-12 col-md-12 col-sm-12">
                <div class="log_wrap">
                    <h4>Recovery Password</h4>
                    <div class="login-form">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        
                        <div class="form-group">
                            <label>
                                @Html.LabelFor(model => model.Password)
                            </label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group">
                            <label>
                                @Html.LabelFor(model => model.RePassword)
                            </label>
                            @Html.EditorFor(model => model.RePassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.RePassword, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-md full-width pop-login">Recovery Password</button>
                        </div>

                    </div>
                </div>
            </div>


        </div>
    </section>
}


