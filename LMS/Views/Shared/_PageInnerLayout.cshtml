                                    <input type="password" name="Password" class="form-control" placeholder="*******">
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-md full-width pop-login">ورود</button>
                                </div>


                            </div>

                            <div class="social-login mb-3">
                                <ul>

                                    <li><a href="/ForgotPassword" class="theme-cl">فراموشی رمز؟</a></li>
                                    <li>
                                        <input id="RememberMe" type="checkbox" value="true" name="RememberMe" />
                                        <input type="hidden" value="false" name="RememberMe" />
                                        <label for="Remember" class="checkbox-custom-label">مرا به خاطر بسپار</label>
                                    </li>
                                </ul>
                            </div>

                            <div class="text-center">
                                <p class="mt-2"><a href="/Register" class="link">ثبت نام</a></p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
