                        <h4 class="modal-header-title">ثبت نام</h4>
                        <div class="login-form">
                            @using (Html.BeginForm("Register", "Account"))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-group">
                                    <input type="text" class="form-control" name="UserName" placeholder="نام کاربری">
                                </div>

                                <div class="form-group">
                                    <input type="email" class="form-control" name="Email" placeholder="ایمیل">
                                </div>

                                <div class="form-group">
                                    <input type="password" onkeyup="CheckPass()" id="Pass" class="form-control" name="Password" placeholder="*******">
                                </div>

                                <div class="form-group">
                                    <input type="password" onkeyup="CheckPass()" id="RePass" class="form-control" name="Repassword" placeholder="*******">
                                </div>


                                <div class="form-group">
                                    <button type="submit" id="btnRegister" class="btn btn-md full-width pop-login">ثبت نام</button>
                                </div>


                            }
                        </div>
                        <div class="text-center">
                            <p class="mt-3"><i class="ti-user mr-1"></i><a href="/Login" class="link">ورود</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
